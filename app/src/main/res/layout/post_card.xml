<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#eeeeee">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/postCard"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        tools:ignore="MissingConstraints"
        android:background="#ffffff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:padding="16dp">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_android_24dp"
            app:layout_constraintEnd_toStartOf="@id/textViewDate"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="3dp"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:id="@+id/textViewDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:textSize="10sp"
            app:layout_constraintBottom_toTopOf="@+id/content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.206"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/avatar"
            app:layout_constraintVertical_bias="0.135"
            tools:text="20 august 2019"
            android:textColor="#999999"/>

        <ImageButton
            android:id="@+id/closeButton"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_close_black_24dp"
            android:background="#ffffff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="-4dp" />

        <TextView
            android:id="@+id/author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:textColor="#000000"
            app:layout_constraintStart_toEndOf="@id/avatar"
            app:layout_constraintTop_toBottomOf="@id/textViewDate"
            tools:text="Netology" />

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/video"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/avatar"
            tools:text="First post in our network!"
            android:layout_marginTop="16dp"/>

        <ImageButton
            android:id="@+id/video"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:layout_constraintTop_toBottomOf="@+id/content"
            android:src="@drawable/ic_play_arrow_black_24dp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_logo_full_color_black"
            app:layout_constraintTop_toBottomOf="@id/video"
            android:visibility="gone"/>

        <Button
            android:id="@+id/buttonLink"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Перейти"
            app:layout_constraintTop_toBottomOf="@+id/image"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/eventTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            tools:text="Event"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/buttonLink"
            android:layout_marginTop="5dp"/>

        <ImageButton
            android:id="@+id/likeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:background="#ffffff"
            android:src="@drawable/ic_favorite_inactive_24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.200"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/buttonLink" />

        <TextView
            android:id="@+id/likeCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="50"
            app:layout_constraintTop_toBottomOf="@id/buttonLink"
            app:layout_constraintStart_toEndOf="@id/likeBtn"
            android:layout_marginTop="16dp"/>

        <ImageButton
            android:id="@+id/commentsBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:src="@drawable/ic_chat_inactive_24dp"
            app:layout_constraintTop_toBottomOf="@id/buttonLink"
            app:layout_constraintStart_toEndOf="@id/likeCount"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/commentsCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/buttonLink"
            app:layout_constraintStart_toEndOf="@id/commentsBtn"
            tools:text="20"
            android:layout_marginTop="16dp"/>

        <ImageButton
            android:id="@+id/shareBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            app:layout_constraintTop_toBottomOf="@id/buttonLink"
            app:layout_constraintStart_toEndOf="@id/commentsCount"
            android:src="@drawable/ic_share_inactive_24dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/shareCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/buttonLink"
            app:layout_constraintStart_toEndOf="@id/shareBtn"
            tools:text="10"
            android:layout_marginTop="16dp"/>

        <ImageButton
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_location_on_inactive_24dp"
            android:background="#ffffff"
            app:layout_constraintTop_toBottomOf="@id/buttonLink"
            app:layout_constraintStart_toEndOf="@id/shareCount"
            android:layout_marginTop="16dp"
            android:layout_marginStart="32dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>